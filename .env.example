# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security - CHANGE THESE VALUES!
API_KEY=your-very-secure-random-api-key-here-min-32-chars
ALLOWED_ORIGINS=https://yourdomain.com,https://your-n8n-instance.com

# Rate Limiting
RATE_LIMIT_MAX=100

# File Processing
TEMP_DIR=/tmp/media-decrypt
CLEANUP_INTERVAL=3600000
MAX_FILE_AGE=3600000

# Performance Tuning
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=4

# Logging
LOG_LEVEL=info

# Optional: Database (if you want to store metrics)
# DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_decrypt

# Optional: Redis (for caching/rate limiting)
# REDIS_URL=redis://localhost:6379

# Optional: Sentry (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
